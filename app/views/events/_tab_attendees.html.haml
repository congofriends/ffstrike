.tab-pane#attendees
  .well
    %table.table.table-bordered.table-striped.sortable
      %tr
        %th Name
        %th Email
        %th Phone number
        %th Point person?
        %th Notes
      - event.attendees.each do |attendee|
        %tr
          %td= attendee.name
          %td= attendee.email
          %td= attendee.phone
          %td= attendee.point_for(event) ? "yes" : "no"
          %td= attendee.notes_for(event.id)


