.tab-pane#attendees
  .well
    %table.table.table-bordered.table-striped.sortable#attendee-table
      %tr
        %th= t('views.events.name')
        %th= t('views.events.email')
        %th= t('views.events.phone')
        %th= t('views.events.point')
        %th= t('views.events.notes')
      - event.attendees.each do |attendee|
        %tr
          %td= attendee.name
          %td= attendee.email
          %td= attendee.phone
          %td= link_to( attendee.volunteer_for(event) ? t('views.events.yes') : t('views.events.no'), assign_volunteer_path(attendee_id: attendee.id, event_id: event.id), method: :put, remote: true, class: "check-box btn", id: "assign_volunteer#{event.id}")
          %td= best_in_place attendee.attendance_for(event), :notes, :path=> attendance_path({event_id: event.id, attendee_id: attendee.id}), :type => :input, :html_attrs => {:class=>"input"}
