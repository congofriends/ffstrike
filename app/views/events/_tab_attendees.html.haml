.tab-pane#attendees
  .well
    %table.table.table-bordered.table-striped.sortable#attendee-table
      %tr
        %th Name
        %th Email
        %th Phone number
        %th Point person?
      - event.attendees.each do |attendee|
        %tr
          %td= attendee.name
          %td= attendee.email
          %td= attendee.phone
          %td= link_to( attendee.volunteer_for(event) ? 'X' : 'O', assign_volunteer_path(attendee_id: attendee.id, event_id: event.id), method: :put, remote: true, id: "assign_volunteer#{event.id}", class: "btn")
