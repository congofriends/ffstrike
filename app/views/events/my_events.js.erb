function initializeEditEventValidations() {
  $('#edit-event-form').validate({
    rules: {
      'event[name]': { required: true },
      'event[city]': { required: true },
      'event[state]': { required: true },
      'event[address]': { required: true },
      'event[description]': { required: true },
      'event[zip]': {
      required: true,
      number: true,
      rangelength: [5, 5] }

    },
    messages: {
      'event[name]': "<%= t('events.validations.name') %>",
      'event[start_time]': "<%= t('events.validations.start_time') %>",
      'event[city]': "<%= t('events.validations.city') %>",
      'event[state]': "<%= t('events.validations.state') %>",
      'event[address]': "<%= t('events.validations.address') %>",
      'event[description]': "<%= t('events.validations.description') %>",
      'event[zip]': {
      required: "<%= t('events.validations.zip_required') %>",
      number: "<%= t('events.validations.zip_numeric') %>",
      rangelength: "<%= t('events.validations.zip_length') %>"}
    },
    errorElement: "div",
    errorClass: "text-danger",
    errorId: "event_error",
    errorPlacement: function (error, element) {
      error.insertAfter(element);
      element.closest('div').addClass('has-error');
    },
    success: function (label) {
        label.closest('.form-group').removeClass('has-error').addClass('has-success');
        label.next('.help-block').hide();
    }
  });
};

