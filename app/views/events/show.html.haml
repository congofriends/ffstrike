= content_for :head do
  = javascript_include_tag "https://maps.googleapis.com/maps/api/js?key=AIzaSyBbtk27nVgvIulQCz60VwgdY0rLBAXdwgg&sensor=false"
= content_for :title, @event.name

.container
  .row
    .col-sm-6
      %h2= @event.name
      .event-datetime= @event.formatted_time
      =@event.location
    .col-sm-6
      .row
        %br
        =@event.notes
      .row
        %br
        .col-sm-12
          - unless @event.with_attendee? current_user
            = link_to "Yes! I want to attend!", new_attendee_user_path({:event => @event.id}), {class: "btn"}

  .row
    .col-sm-12
      %br
      %iframe{frameborder: "0", height: "250", src: "https://www.google.com/maps/embed/v1/place?key=AIzaSyBbtk27nVgvIulQCz60VwgdY0rLBAXdwgg\r\n    &q=#{@event.location}", style: "border:0", width: "100%"}

- if @event.forum_option
  .container
    #disqus_div
      - if current_user
        = SingleSignIn.get_disqus_sso(current_user)
      #disqus_thread
        :javascript
          /* * * CONFIGURATION VARIABLES: EDIT BEFORE PASTING INTO YOUR WEBPAGE * * */
          var disqus_shortname = 'shiftengage'; // required: replace example with your forum shortname

          /* * * DON'T EDIT BELOW THIS LINE * * */
          (function() {
            var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
            dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
            (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
          })();
        %noscript
          Please enable JavaScript to view the
          %a{href: "http://disqus.com/?ref_noscript"} comments powered by Disqus.
        %a.dsq-brlink{href: "http://disqus.com"}
          comments powered by
          %span.logo-disqus Disqus
