.panel-group#accordion
  .panel-heading
    %h4.panel-title
      %a{data: {toggle: "collapse", parent: "#accordion"}, href: "#collapseTwo"}
        Email Event Attendees 
  #collapseTwo.panel-collapse.collapse
    .panel-body
      .row
        = form_tag(mail_attendees_path(movement_id: event.movement, event_id: event), method: "post") do
          .col-md-9
            = text_area_tag "message", nil, placeholder: 'Enter a message to send to event attendees', class: 'form-control'
          .col-md-3
            = submit_tag "Send Email", class: 'btn btn-primary'
