<div class="event-<%= event.id %>-details">
  <%= link_to "'#{event.name}' event summary", event_path(event) %>
  <%= link_to "Remove event", event, method: :delete, data: { confirm: "Are you sure you want to delete this event?"}, remote: true, class:'btn btn-primary btn-xs' %>
  <form class="form-horizontal" role="form">
    <div class="form-group" id="events-list">
      <label class="col-sm-1">Type:</label>
      <div class="col-sm-10">
        <%= best_in_place event, :event_type_id, :type=> :select, :collection => @event_types, :html_attrs => {:class=>"input"}%>
      </div>
    </div>

    <div class="form-group" id="events-list">
      <label class="col-sm-1">Address 1:</label>
      <div class="col-sm-10">
        <%= best_in_place event, :address, :type => :input, :html_attrs => {:class => "input"}%>
      </div>
    </div>

    <div class="form-group" id="events-list">
      <label class="col-sm-1">Address 2:</label>
      <div class="col-sm-10">
        <%= best_in_place event, :address2, :type => :input, :html_attrs => {:class => "input"}%>
      </div>
    </div>

    <div class="form-group" id="events-list">
      <label class="col-sm-1">City:</label>
      <div class="col-sm-10">
        <%= best_in_place event, :city, :type => :input, :html_attrs => {:class => "input"}%>
      </div>
    </div>

    <div class="form-group" id="events-list">
      <label class="col-sm-1">State:</label>
      <div class="col-sm-10">
        <%= best_in_place event, :state, :type => :input, :html_attrs => {:class=> "input"} %>
      </div>
    </div>

    <div class="form-group" id="events-list">
      <label class="col-sm-1">Zip:</label>
      <div class="col-sm-10">
        <%= best_in_place event, :zip, :type => :input, :html_attrs => {:class => "input"}%>
      </div>
    </div>

    <div class="form-group" id="events-list">
      <label class="col-sm-1">Notes:</label>
      <div class="col-sm-10">
        <%= best_in_place event, :notes, :type => :input, :html_attrs => {:class => "input"}%>
      </div>
    </div>
    <div class="form-group" id="events-list">
      <label class="col-sm-1">Approved:</label>
      <div class="col-sm-10">
        <%= best_in_place event, :approved, :type => :checkbox, :html_attrs => {:class => "input"}%>
      </div>
    </div>

    <div class="form-group" id="events-list">
      <label class="col-sm-1">Disqus</label>
      <div class="col-sm-10">
        <%= best_in_place event, :forum_option, :type => :checkbox, :html_attrs => {:class => "input"} %>
      </div>  
    </div>

  </form>

  <div class="form-inline">
    <%= form_for event do |f| %>

      <div class='form-group'>
        <%= f.label :image %>
          <%= image_tag @event.image %>
          <%= f.file_field :image %>
      </div>

      <div class='form-group'>
        <%= f.label "Start date & time:"%>
        <%= f.text_field :start_time, class: 'form-control datetimepicker' %>
      </div>

      <div class='form-group'>
        <%= f.label "End date & time:"%>
        <%= f.text_field :end_time, class: 'form-control datetimepicker' %>
        <%= f.submit "Update" %>
      </div>
    <%end%>
  </div>
</div></br>
