<div class='container'>
  <div class='well new-event'>

    <%= form_for ([@movement, @event]), html: { id: 'new-event-form' } do |form| %>
      <fieldset>

        <fieldset class="event_details">  
          <legend> Event Basic Information</legend>
          <div class='form-group'>
            <%= form.label :event_name, "Event Name *" %>
            <%= form.text_field :name, class: 'form-control' %>
          </div>
          <div class="event-date-time">
            <div class='form-group'>
              <%= form.label "Start date & time: *" %>
              <%= form.text_field :start_time, class: 'form-control datetimepicker' %>
            </div>

            <div class='form-group'>
              <%= form.label "End date & time:" %>
              <%= form.text_field :end_time, class: 'form-control datetimepicker' %>
            </div>
          </div>

          <legend> Event address</legend>
          <div class="row">
            <div class="form-group col-xs-6">
              <%= form.label :address, 'Address 1 *' %>
              <%= form.text_field :address, class: 'form-control' %>
            </div>
            <div class="form-group col-xs-6">
              <%= form.label :address2, 'Address 2' %>
              <%= form.text_field :address2, class: 'form-control' %>
            </div>
          </div>

          <div class="row">
            <div class="form-group col-xs-5">
              <%= form.label :city, 'City *' %>
              <%= form.text_field :city, class: 'form-control' %>
            </div>
            <div class="form-group col-xs-2">
              <%= form.label :state, 'State *' %>
              <%= form.text_field :state, class: 'form-control' %>
            </div>
            <div class="form-group col-xs-5">
              <%= form.label :zip, 'Zip *' %>
              <%= form.text_field :zip, class: 'form-control' %>
            </div>
          </div>
          <div class='form-group'>
            <%= form.label :location_details %>
            <%= form.text_field :location_details, placeholder: "meet at the coner of Belmont & Sheridan", class: 'form-control' %>
          </div>
          <button type="button", class="btn btn-success next"> Next </button>
        </fieldset>

        <fieldset class="event_address">  
          <legend> Event details</legend>
           <div class='form-group'>
            <%= form.label :image %>
            <%= form.file_field :image%>
          </div>
          <div class='form-group'>
            <%= form.label :event_type_id, "Event Type *" %>
            <% if params[:type].nil? %>
              <%= form.select :event_type, EventType.all.map(&:name), {class: 'form-control'}, {class: 'form-control'} %>
            <%else%>
              <%= form.select :event_type, EventType.all.map(&:name), {:selected=>params[:type] }, {class: 'form-control'}%>
            <%end%>
          </div>

          <div class='form-group'>
            <%unless @movement.sub_movements.empty? %>
              <%= form.label :movement, "Would one of our chapters be a better fit for this event?" %>
              <%= form.select :movement, @movement.sub_movements.map(&:name), {:include_blank => "Stay under the parent movement: " + @movement.name}, {class: 'form-control'}%>
            <%end%>
            <%if @movement.parent %>
              Is this event under a chapter?</br>
              <%= form.label :movement, "Would one of our other chapters be a better fit for this event?"%>
              <%= form.select :movement, @movement.parent.sub_movements.map(&:name), {selected: @movement.name, include_blank: "Stay under the parent movement: " + @movement.parent.name}, {class: 'form-control'}%>
            <%end%>
          </div>
          <button type="button", class="btn btn-primary previous"> Previous </button>
          <button type="button", class="btn btn-success next"> Next </button>
        </fieldset>

        <fieldset class="event_additional_details">
          <legend> Event details </legend>
          <div class='form-group'>
            <%= form.label "Message to attendees after sign up" %>
            <%= form.text_field :notes, class: 'form-control' %>
          </div>

          <div class='form-group'>
            <%= form.label "Include Disqus Comment Thread"%>
            <%= form.check_box :forum_option, class: 'form-control' %>
          </div>

          <% if current_user %>
              <%= form.hidden_field :host_id, value: current_user.id %>
          <%end%>
          <div class='form-group'>
            <button type="button", class="btn btn-primary previous"> Previous </button>
            <%= form.submit 'Create Event', class: 'btn btn-success', id: 'create_event' %>
          </div>
        </fieldset>
      </fieldset>
    <%end%>
  </div>
</div>
