= render 'contact_validations'
%h4
  =t('views.contact.contact_host_for')
%h5= @event.name
= form_for @message, :method => :post, :url => contact_path, html: { id: 'contact-form' } do |form|
  .field
    = form.label t('views.contact.name') +' *', class: "modal-field form-label"
    = form.text_field :name, class: "modal-input form-inline form-control"
  .field
    = form.label t('views.contact.email') + ' *', class: "modal-field form-label"
    = form.text_field :email, class: "modal-input form-inline form-control"
  .field
    = form.label t('views.contact.subject') + ' * ', class: "modal-field form-label"
    = form.text_field :subject, value: t('views.contact.question', about: @event.name),  class: "modal-input form-inline form-control"
  .field
    = form.label t('views.contact.message') + ' * ', class: "modal-field"
    = form.text_area :body, class: "modal-input contact-body form-control", rows: "6"
  = form.hidden_field :host_id, value: @event.id
  = form.submit t('views.contact.submit'), class: "contact-send-btn btn"
