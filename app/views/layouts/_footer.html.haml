%footer
  .container
    .custom-footer
      .row
        .col-xs-7.col-xs-offset-5

          = link_to t('.template') + " | ", template_path, class: 'footer-link'
          = link_to t('.media') + " | ", "http://congoweek.org/downloads.html", class: 'footer-link', :target => '_blank'
          = link_to t('.about'), about_path, class: 'footer-link', id: 'about'
          = link_to image_tag("fb_logo.png"), "https://www.facebook.com/congofriends", id: 'share-logo', :target => '_blank'
          = link_to image_tag("twitter_logo.png"), "https://twitter.com/congofriends", id: 'share-logo', :target => '_blank'
          = link_to image_tag("youtube_logo.png"), "https://www.youtube.com/user/congofriends", id: 'share-logo', :target => '_blank'
