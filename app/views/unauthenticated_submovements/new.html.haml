=image_tag Movement.first.image, class: "bg"
.container.no-header{:style => "width: 800px;"}
  .row
    .col-md-4
      %h2
        =t('.thanks_msg')
      %h4
        =t('.explanation_msg')
      %p
        =t("events.new.account_exist")
        =link_to t("events.new.sign_in"), new_session_path(:user), id: "sign-in-link"
    .col-md-7
      .well
        .form-horizontal
          = form_tag unauthenticated_submovements_path, id: 'new-group-form', method: :post, multipart: true do
            %fieldset
              %fieldset
                %legend=t('.legend')
                .form-group
                  = label :movement, :name, t('.name') + ' * ', { class: 'col-md-4 control-label' }
                  .col-md-8
                    = text_field :movement, :name , { class: 'form-control', placeholder: 'Congo Supporters'}
                .form-group
                  = label :movement, :phone, t('.phone'), { class: 'col-md-4 control-label' }
                  .col-md-8
                    = text_field :movement, :phone, { class: 'form-control', placeholder: '123-456-7890' }
                .form-group
                  = label :movement, :tagline,  t('.tagline'), { class: 'col-md-4 control-label' }
                  .col-md-8
                    = text_area :movement,  :tagline, { class: 'form-control', placeholder: '#CongoWeek' }
                .form-group
                  = label :movement, :website, t('.website'), { class: 'col-md-4 control-label' }
                  .col-md-8
                    = text_area :movement, :website, { class: 'form-control', placeholder: 'www.congoweek.com' }
                .form-group
                  = label :movement, :avatar, t('.avatar'), { class: 'col-md-4 control-label' }
                  .col-md-8
                    = file_field :movement, :avatar
                .form-group
                  = label :movement, :video, t('.youtube_link'), { class: 'col-md-4 control-label' }
                  .col-md-8
                    = text_field :movement, :video, { class: 'form-control' }
                .form-group
                  = label :movement, :flickr, "Flickr Gallery URL", { class: 'col-md-4 control-label' }
                  .col-md-8
                    = text_field :movement, :flickr, { class: 'form-control' }
                = hidden_field :parent_id, value:  params[:parent_id]
                = link_to t('movements.new.cancel_btn'), :back, class: "btn btn-cancel"
                %button{type: "button", class: "btn btn-success next-group"}=t('.next')
              %fieldset.event_additional_details
                %legend=t('.legend2')
                .row
                  .form-group.col-xs-6
                    = label :user, :name, 'First Name *', class: 'control-label'
                    = text_field :user, :name, class: 'form-control', :maxlength => 35
                  .form-group.col-xs-6
                    = label :user, :surname, 'Last Name *', class: 'control-label'
                    = text_field :user, :surname, class: 'form-control', :maxlength => 35
                .row
                  .form-group.col-xs-12
                    = label :user, :email, 'Email *', class: 'control-label'
                    = email_field :user, :email, class: 'form-control'
                .row
                  .form-group.col-xs-12
                    = label :user, :password, 'Password *'
                    = password_field :user, :password, class: 'form-control'
                .row
                  .form-group.col-xs-12
                    = label :user, :password_confirmation, 'Password confirmation *'
                    = password_field :user, :password_confirmation, class: 'form-control'
                .form-group
                  %button{type: "button", class: "btn btn-primary previous-group"}=t('.previous')
                  = submit_tag t('.create_btn'), class: 'btn btn-success'

