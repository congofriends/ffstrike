<div class='row'>
  <h3>Rally details page</h3>
  <p><%= @rally.name %></p>
  <p><%= @rally.address %></p>
  <p><%= @rally.city %></p>
  <p><%= @rally.notes %></p>
  <p>Number of attendees: <span class="badge"> <%= @rally.number_of_attendees %> </span></p>

  <h4>List of attendees:</h4>
  <% @rally.attendees.each_with_index do |attendee, index| %>
    <div class='col-md-3'>
      <div class="panel panel-default">
        <div class='panel-body'>
          <p><%= index %></p>
          <p><%= attendee.name %></p>
          <p><%= attendee.email %></p>
        </div>
      </div>
    </div>
  <% end %>

  <% render partial: "email_rally.html.erb", locals: { rally: @rally, movement: @movement} %>
</div>
