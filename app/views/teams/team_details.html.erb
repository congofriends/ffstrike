<h1>Team Details</h1>
<% binding.pry %>
<h2>You are the member of teams:</h2>

<% @teams = Team.where('role_applications.user_id' => current_user.id) if @teams.size.eql?(0) %>
<div class="row">
<% @teams.each do |team| %>
  <div class="col-sm-6 col-md-3">
    <div class="thumbnail thumbnail-teams">
      <div class="caption">
        <h3> <%= team.name %></h3>
        <p> Cras justo odio, dapibus ac facilisis in, egestas eget quam. Donec id elit non mi porta gravida at eget metus. Nullam id dolor id nibh ultricies vehicula ut id elit. </p>
        <% if team.coordinator.user_id == current_user.id %>
        <p>
          <%= link_to 'Edit details', edit_team_path(params[:id] = team.id), :class => "btn btn-information"%>
          <%= link_to 'Edit to-do tasks', team_tasks_path(params[:id] = team.id), :class => "btn btn-success"%>
          <%= link_to 'Disband', disband_team_path(params[:id] = team.id), :class => "btn btn-danger"%>
        </p>
      <% end %>
      </div>
    </div>
  </div>
<% end %>
</div>

<% @teams.each do |team| %>
 <form class="form-horizontal" role="form">
    <%= form_for team do |f| %>
      <fieldset disabled>
      <div class="form-group">
        <%= f.label "Team name", :class => "col-lg-2 control-label" %>
        <div class="col-lg-10">
          <%= f.text_field :name, :class => "form-control"  %> 
        </div>
      </div>
      <div class="form-group">
        <%= f.label "Zip", :class => "col-lg-2 control-label" %>
        <div class="col-lg-10">
           <%= f.text_field :zip, :class => "form-control" %> 
        </div>
      </div>  
      <div class="form-group">
        <%= f.label "City", :class => "col-lg-2 control-label" %>
        <div class="col-lg-10">
          <%= f.text_field :city, :class => "form-control" %> 
        </div>
      </div>  
    <%= f.fields_for team.coordinator do |g| %>
      <div class="form-group">
        <%= g.label "Where", :class => "col-lg-2 control-label"%>
        <div class="col-lg-10">
          <%= g.text_area :where, :class => "form-control txt-area-team-details" %>
        </div>
      </div> 
      <div class="form-group">
        <%= g.label "Why", :class => "col-lg-2 control-label"%>
        <div class="col-lg-10">
          <%= g.text_area :why, :class => "form-control txt-area-team-details" %>
        </div>
      </div> 
    <% end %>
      </fieldset>
  <% end %>  
  </form>
<% end %>

