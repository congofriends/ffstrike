<h1>Edit team information </h1>

<%= form_for @team do |f| %>
  <div class="form-group">
    <%= f.label :name, :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.text_field :name, :class => "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :city, :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.text_field :city, :class => "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :zip, :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.text_field :zip, :class => "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :map, :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.text_field :map, :class => "form-control" %>
    </div>
  </div>

  <%= f.fields_for @team.coordinator do |g| %>
    <div class="form-group">
      <%= g.label "Where", :class => "col-lg-2 control-label"%>
      <div class="col-lg-10">
        <%= g.text_area :where, :class => "form-control" %>
      </div>
    </div> 
    <div class="form-group">
      <%= g.label "Why", :class => "col-lg-2 control-label"%>
      <div class="col-lg-10">
        <%= g.text_area :why, :class => "form-control" %>
      </div>
    </div> 
  <% end %>
  <%= f.submit "Update", :class => "btn btn-primary" %>
  <%= link_to "Go back", team_details_path, :class => "btn btn-primary" %>
<% end %>
