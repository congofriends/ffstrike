= form_for @user, method: "post", url: create_attendee_user_path, html: { id: 'attendee-form' } do |f|
  .panel-heading
    .panel-title
      %h3 Please give us more information to sign up!
      %h5 If you already have an account, #{link_to "sign in", new_session_path(:user), id: "sign-in"}

  .panel-body

    .form-group.label-field
      = f.label :name, 'Name*'
      = f.text_field :name, class: "form-control"

    .form-group.label-field
      = f.label :phone
      = f.text_field :phone, class: "form-control"

    .form-group.label-field
      = f.label 'Email*'
      = f.email_field :email, class: "form-control"

      = f.hidden_field :event_id, value: @event.id

    .form-group.label-field
      = fields_for :attendance, @attendance do |a|
        = a.label "I'd like to volunteer for this event!"
        = a.check_box :point_person

      = f.hidden_field :event_id, value: @event.id

    .form-group
      = f.submit "Sign me up!", class: "btn btn-info col-md-12"

  %p.text-info.small Expect to hear from the host with event updates
