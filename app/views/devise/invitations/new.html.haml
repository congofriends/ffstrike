= render 'invitation_validations'
%h2= t "devise.invitations.new.header"
= form_for resource, :as => resource_name, :url => invitation_path(resource_name), html: { id: 'invitation-form', method: :post } do |f|
  = devise_error_messages!
  - resource.class.invite_key_fields.each do |field|
    %p
      = f.label field
      %br/
      = f.text_field field
  = f.hidden_field :mvmt_id, value: @movement.id
  %p= f.submit t("devise.invitations.new.submit_button"), class: "btn btn-host"