= render 'invitation_validations'
.container
  %h2= t 'devise.invitations.edit.header'
  = form_for resource, :as => resource_name, :url => invitation_path(resource_name), html: { id: 'invitation-form', method: :put } do |f|
    = devise_error_messages!
    = f.hidden_field :invitation_token
    = hidden_field_tag :movement_id, @movement.id
    %p
      = f.label :name
      %br/
      = f.text_field :name
    %p
      = f.label :password
      %br/
      = f.password_field :password
    %p
      = f.label :password_confirmation
      %br/
      = f.password_field :password_confirmation
    %p= f.submit t("devise.invitations.edit.submit_button")