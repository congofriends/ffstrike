= image_tag Movement.first.image, class: "bg"
= render 'registration_validations'
.col-md-4.col-md-offset-4
  %div.content-header.container{:style => "width: 400px;"}
    %h2.text-center.header-text Sign Up
  .container{:style => "width: 400px;"}
    .form-horizontal
      = form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
        = devise_error_messages!
        %fieldset
          .form-group
            = f.label :name, t('devise.registrations.edit.name'), class: 'col-md-4 control-label'
            .col-md-8
              = f.text_field :name, :autofocus => true, class: 'form-control', :maxlength => 35
          .form-group
            = f.label :surname, t('devise.registrations.edit.surname'), class: 'col-md-4 control-label'
            .col-md-8
              = f.text_field :surname, :autofocus => true, class: 'form-control', :maxlength => 35
          .form-group
            = f.label :phone, t('devise.registrations.edit.phone'), class: 'col-md-4 control-label'
            .col-md-8
              = f.text_field :phone, :autofocus => true, class: 'form-control'
          .form-group
            = f.label :email, t('devise.registrations.edit.email'), class: 'col-md-4 control-label'
            .col-md-8
              = f.email_field :email, class: 'form-control'
          .form-group
            = f.label :password, t('devise.registrations.edit.pass'), class: 'col-md-4 control-label'
            .col-md-8
              = f.password_field :password, class: 'form-control'
          .form-group
            = f.label :password_confirmation, t('devise.registrations.edit.pass_confirm'), class: 'col-md-4 control-label'
            .col-md-8
              = f.password_field :password_confirmation, class: 'form-control'
          .form-group
            .col-md-8.col-md-offset-4
              = f.submit t('devise.registrations.edit.sign_up'), class: 'btn btn-primary', id: 'sign_up_button'
      = render "devise/shared/links"
