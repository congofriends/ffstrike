=image_tag "girls_singing.jpg", class: "bg"
= render 'registration_validations'
.col-md-4.col-md-offset-4
  %div.content-header.container{:style => "width: 400px;"}
    %h2.text-center.header-text Sign Up
  .container{:style => "width: 400px;"}
    .form-horizontal
      = form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
        = devise_error_messages!
        %fieldset
          .form-group
            = f.label :name, "First Name", class: 'col-md-4 control-label'
            .col-md-8
              = f.text_field :name, :autofocus => true, class: 'form-control'
          .form-group
            = f.label :surname, "Last Name", class: 'col-md-4 control-label'
            .col-md-8
              = f.text_field :surname, :autofocus => true, class: 'form-control'
          .form-group
            = f.label :email, class: 'col-md-4 control-label'
            .col-md-8
              = f.email_field :email, class: 'form-control'
          .form-group
            = f.label :password, class: 'col-md-4 control-label'
            .col-md-8
              = f.password_field :password, class: 'form-control'
          .form-group
            = f.label :password_confirmation, class: 'col-md-4 control-label'
            .col-md-8
              = f.password_field :password_confirmation, class: 'form-control'
          .form-group
            .col-md-8.col-md-offset-4
              = f.submit "Sign up", class: 'btn btn-primary', id: 'sign_up_button'
      = render "devise/shared/links"
