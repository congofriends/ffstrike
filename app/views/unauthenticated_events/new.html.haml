.container
  .row
    .col-md-10.col-md-offset-1
      .well
        = form_tag movement_unauthenticated_events_path, id: 'new-event-form', method: :post do
          %fieldset
            %fieldset.event_details
              %legend Event Basic Information (1/3)
              .form-group
                = label :event, :name, "Event Name *"
                = text_field :event, :name, class: 'form-control'
              .form-group
                = label :event, :description, "Event Description *"
                = text_field :event, :description, class: 'form-control'
              .event-date-time
                .form-group
                  = label :event, :start_time, "Start date & time: *"
                  = text_field :event, :start_time, class: 'form-control datetimepicker'
                .form-group
                  = label :event, :end_time, "End date & time:(optional)"
                  = text_field :event, :end_time, class: 'form-control datetimepicker'
              %legend Event address
              .row
                .form-group.col-xs-6
                  = label :event, :address, 'Address 1 *'
                  = text_field :event, :address, class: 'form-control'
                .form-group.col-xs-6
                  = label :event, :address2, 'Address 2'
                  = text_field :event, :address2, class: 'form-control'
              .row
                .form-group.col-xs-5
                  = label :event,:city, 'City *'
                  = text_field :event,:city, class: 'form-control'
                .form-group.col-xs-2
                  = label :event,:state, 'State *'
                  = text_field :event,:state, class: 'form-control'
                .form-group.col-xs-5
                  = label :event,:zip, 'Zip *'
                  = text_field :event,:zip, class: 'form-control'
              .form-group
                = label :event,:location_details, 'Location Details'
                = text_field :event,:location_details, placeholder: "meet at the corner of Belmont & Sheridan", class: 'form-control'
              %button{type: "button", class: "btn btn-success next"} Next
            %fieldset.event_additional_details
              %legend Event details (2/3)
              .form-group
                = label :event,:image, 'Image'
                = file_field :event, :image, class: 'form-control'
              .form-group
                = label :event, :notes, 'Write a brief message to event attendees:'
                = text_field :event, :notes, class: 'form-control'
              .form-group
                = label :event, :type_id, 'Event Type *'
                = select :event, :event_type, EventType.all.map(&:name), class: 'form-control'
              .form-group
                - unless @movement.sub_movements.empty?
                  = label :event,:movement, 'If this event is associated with a chapter, please choose it here:'
                  = select :event, :movement, @movement.sub_movements.map(&:name), {include_blank: ""}, {class: 'form-control'}
                - if @movement.parent
                  = label :event,:movement, 'If this event is associated with a chapter, please choose it here:'
                  = select :event, :movement, @movement.parent.sub_movements.map(&:name), {selected: @movement.name, include_blank: ""}, {class: 'form-control'}
              .form-group
                = label :event,:forum_option, 'Include an attendee discussion forum on this event:'
                = check_box :event,:forum_option, class: 'form-control'
              .form-group
                %button{type: "button", class: "btn btn-primary previous"} Previous
                %button{type: "button", class: "btn btn-success next"} Next
            %fieldset.event_additional_details
              %legend Sign Up to Create Event (3/3)
              .form-group
                = label :user, :name
                = text_field :user, :name, class: 'form-control'
              .form-group
                = label :user, :email
                = email_field :user, :email, class: 'form-control'
              .form-group
                = label :user, :phone
                = phone_field :user, :phone, class: 'form-control'
              .form-group
                = label :user, :password
                = password_field :user, :password, class: 'form-control'
              .form-group
                = label :user, :password_confirmation
                = password_field :user, :password_confirmation, class: 'form-control'
              .form-group
                %button{type: "button", class: "btn btn-primary previous"} Previous
                = submit_tag 'CREATE EVENT', class: 'btn btn-success', id: 'create_event'