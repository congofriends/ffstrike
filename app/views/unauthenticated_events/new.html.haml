.container
  .row
    .col-md-10.col-md-offset-1
      .well
        = form_tag movement_unauthenticated_events_path, id: 'new-event-form', method: :post do
          %fieldset
            %fieldset.event_details
              %legend= t("views.events.unauthenticated.legend1")
              .form-group
                = label :event, :name, t("views.events.edit.name") + " *"
                = text_field :event, :name, class: 'form-control'
              .form-group
                = label :event, :description, t("views.events.description") + " *"
                = text_field :event, :description, class: 'form-control'
              .event-date-time
                .form-group
                  = label :event, :start_time, t("views.events.edit.start_date") + " *"
                  = text_field :event, :start_time, class: 'form-control datetimepicker'
                .form-group
                  = label :event, :end_time,  t("views.events.edit.end_date")
                  = text_field :event, :end_time, class: 'form-control datetimepicker'
              %legend=  t("views.events.unauthenticated.address")
              .row
                .form-group.col-xs-6
                  = label :event, :address, t("views.events.edit.address1") + " *"
                  = text_field :event, :address, class: 'form-control'
                .form-group.col-xs-6
                  = label :event, :address2, t("views.events.edit.address2")
                  = text_field :event, :address2, class: 'form-control'
              .row
                .form-group.col-xs-5
                  = label :event,:city, t("views.events.edit.city") + " *"
                  = text_field :event,:city, class: 'form-control'
                .form-group.col-xs-2
                  = label :event,:state, t("views.events.edit.state") + " *"
                  = text_field :event,:state, class: 'form-control'
                .form-group.col-xs-5
                  = label :event,:zip, t("views.events.edit.zip") + " *"
                  = text_field :event,:zip, class: 'form-control'
              .form-group
                = label :event,:location_details, t("views.events.location")
                = text_field :event,:location_details, placeholder: t("views.events.new.location_placeholder"), class: 'form-control'
              %button{type: "button", class: "btn btn-success next"}= t("views.events.new.next")
            %fieldset.event_additional_details
              %legend= t("views.events.unauthenticated.legend2")
              .form-group
                = label :event,:image
                = file_field :event, :image, class: 'form-control'
              .form-group
                = label :event, :notes, t("views.events.new.msg_to_attendees")
                = text_field :event, :notes, class: 'form-control'
              .form-group
                = label :event, :type_id, t("views.events.new.event_type") + " *"
                = select :event, :event_type, EventType.all.map(&:name), class: 'form-control'
              .form-group
                - unless @movement.sub_movements.empty?
                  = label :event,:movement, t("views.events.new.event_chapter_msg")
                  = select :event, :movement, @movement.sub_movements.map(&:name), {include_blank: ""}, {class: 'form-control'}
                - if @movement.parent
                  = label :event,:movement, t("views.events.new.event_chapter_msg")
                  = select :event, :movement, @movement.parent.sub_movements.map(&:name), {selected: @movement.name, include_blank: ""}, {class: 'form-control'}
              .form-group
                = label :event,:forum_option, t("views.events.new.forum_msg")
                = check_box :event,:forum_option, class: 'form-control'
              .form-group
                %button{type: "button", class: "btn btn-primary previous"}= t("views.events.new.previous")
                %button{type: "button", class: "btn btn-success next"}= t("views.events.new.next")
            %fieldset.event_additional_details
              %legend= t("views.events.unauthenticated.legend3")
              .form-group
                = label :user, :name,  t("views.events.unauthenticated.name") + " *"
                = text_field :user, :name, class: 'form-control'
              .form-group
                = label :user, :email, t("views.events.unauthenticated.email") + " *"
                = email_field :user, :email, class: 'form-control'
              .form-group
                = label :user, :phone, t("views.events.unauthenticated.phone")
                = phone_field :user, :phone, class: 'form-control'
              .form-group
                = label :user, :password, t("views.events.unauthenticated.password") + " *"
                = password_field :user, :password, class: 'form-control'
              .form-group
                = label :user, :password_confirmation, t("views.events.unauthenticated.password_confirmation") + " *"
                = password_field :user, :password_confirmation, class: 'form-control'
              .form-group
                %button{type: "button", class: "btn btn-primary previous"}= t("views.events.new.previous")
                = submit_tag t("views.events.new.create_btn"), class: 'btn btn-success', id: 'create_event'
