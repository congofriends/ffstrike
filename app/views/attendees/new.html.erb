<div class="panel panel-info attendee-form"  >
  <%= form_for ([event, attendee]) do |f| %>
  <div class="panel-heading"> Attendee info </div>
  <div class="panel-footer">
      <div class="form-inline">
        <div class="form-group">
          <%= f.label :name%>
          <%= f.text_field :name, class: "form-control"%>
        </div>
        <div class="form-group">
          <%= f.label :email%>
          <%= f.email_field :email, class: "form-control"%>
          <p>Your email address will be shared with the movement coordinator.<p>
        </div>
      </div>
      <%= f.submit "Submit my data", class: "btn btn-info"%>
    <% end%>
  </div>
</div> 
