  $('#small<%=params[:event_id]%>').append("<%=j render "tasks/task", task: @task, event: @task.event %>");
<% end %>

<% if params[:task][:medium_event] == "1" %>
  $('#medium<%=params[:event_id]%>').append("<%=j render "tasks/task", task: @task, event: @task.event %>");
<% end %> 

<% if params[:task][:big_event] == "1" %>
  $('#big<%=params[:event_id]%>').append("<%=j render "tasks/task", task: @task, event: @task.event %>");
<% end %> 

$('#new_task<%=params[:event_id]%>').each(function(){ this.reset(); }) ;
