<%= div_for task do %>  
  <li>
 <% if current_user %> 
    <%= link_to raw('<i class="glyphicon glyphicon-remove-circle"></i>') , movement_task_path(@movement, task.id), method: :delete,
      data: { confirm: "You sure about deleting task '#{task.description}'?"}, remote: true  %>
    <% if task.is_assigned_to? current_user %>
      <%= link_to "Signed up!", assign_movement_task_path(@movement, task), :class=>"btn btn-info btn-xs", :disabled => true %>
    <% else %>
      <%= link_to "Sign up", assign_movement_task_path(@movement, task), :class=>"btn btn-primary btn-xs", remote: true %>
    <% end %> 
  <%= best_in_place task, :description, :path=>[@movement, task], :type=> :input, :html_attrs => {:class=>"input"} %>
  <% else %>
      <%= link_to "Sign up", assign_movement_task_path(@movement, task), :class=>"btn btn-default btn-xs", :disabled => true %>
      <%= task.description %>
  <% end %>
  </li>
<% end%>
