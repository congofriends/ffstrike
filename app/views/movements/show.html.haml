=image_tag "nopeacenolife.jpg", class: "bg"
%div.page-wrap-header
  %h2.text-center.header-text
    = t('.congo_week_2014')
%div.page-wrap
  %h4
    = t('.congo_description')
  %br
  %h3.text-center
    = t('.join_congo')
  .row
    .col-sm-6
      -if current_user
        = link_to t('.host_event') , new_movement_event_path(@movement), class: 'btn search btn-host'
      -else
        = link_to t('.host_event') , new_movement_unauthenticated_event_path(@movement), class: 'btn search btn-host'
    .col-sm-6
      = link_to t('.attend_event'), movement_events_path(Movement.first), class: 'btn search btn-host'
  %br
  .row
    .col-sm-12
      = link_to t('.learn_more'), mission_path, class: 'btn btn-host'
  %br
    %h3= t('.congo_start')
    .count-down
  %br
