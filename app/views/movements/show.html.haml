.container
  .movement-content
    .row.movements
      = image_tag @movement.image(:medium), width: 200, :class => "movement_avatar"
      %div{:class=> "movement_info"}
        %h1
          = @movement.name
        %h2{:class=> "tagline"}= @movement.tagline
        - if current_user && @movement.users.include?(current_user)
          = link_to @movement.name + "'s Dashboard", dashboard_movement_path(@movement, anchor: "movement"), :class=> "btn btn-success btn-sm"
        %h3= @movement.call_to_action

        - if @movement.video?
          =youtube_embed_url_for_(@movement.video)

      - if @movement.about_creator
        %h4 About the Movement Creators
        = @movement.about_creator



    -if @movement.parent?
      .host-event
        %h2 Host an event for Congo Week!
        = render 'nav_pills_event'

        .row.more_movements_row.movements
          %span{:class=> "search_event_span"}
            Search for an event near you!  Enter your zip code:
            = form_tag search_movement_path, method: "get", class: 'form-inline', id: 'zip-form' do
              .form-group
                = search_field_tag 'zip', value = nil, options = {placeholder: "ZIP", class: 'form-control'}
                = hidden_field_tag 'id', value = @movement.id
              .form-group
                = button_tag name="Search", class: 'btn btn-sm btn-info'

        - if @movement.parent?
          - if current_user
            = link_to "Create a Chapter!", new_submovement_path(), :class=> "btn btn-success btn-sm"
          - else
            = link_to "Create a Chapter!", new_unauthenticated_submovement_path(), :class => "btn btn-success btn-sm"


    -else
      .host-event
        %h3 Events:
        - @approved_events.each do |event|
          - if event.approved
            .panel.panel-default
              .panel-body
                = link_to event.name, event_path(event)
                on
                %strong= event.date.readable_inspect
                at
                = event.location
                %p
                  %em.pull-right.cite= event.type

  - if @movement.parent?
    %h3.sub_movements Our Support Network
    %div#sub_movements= render @movement.sub_movements

    %h3 Events:
    - @approved_events.each do |event|
      - if event.approved
        = render partial: 'events/panel', locals: {event: event}

  -else
    %br
    %h4 Want to see more activity on this issue? Apply to host an event and we will be in touch!
    = render 'nav_pills_event'
  %br

- if @movement.parent?
  #map Events Near you
  #map-canvas
