:javascript
  function initializeValidations() {
      $('#new_movement').validate({
        rules: {
          'movement[extended_description]':{required: true},
          'movement[name]': {
            required: true,
            remote: "/check_name"}
        },
        messages: {
          'movement[extended_description]':{required: "#{t('validations.description') }" },
          'movement[name]': {
            required: "#{t('validations.name') }",
            remote: "#{t('validations.existing_name') }"}
        },
        errorElement: "div",
        errorClass: "text-danger",
        errorId: "event_error",
        errorPlacement: function (error, element) {
          error.insertAfter(element);
          element.closest('div').addClass('has-error');
        },
        success: function (label) {
            label.closest('.form-group').removeClass('has-error').addClass('has-success');
            label.next('.help-block').hide();
        }
      });
    };

    initializeValidations();
