.tab-pane#past_events
	.well
		.panel.panel-default
			.panel-body
				%table.table.table-bordered.table-striped.sortable#group-events-table
					%tr
						%th= t('.event_name')
						%th= t('.where')
						%th= t('.when')
						%th= t('.status')
						%th= t('.participants')
					- events.each do |event|
						%tr
							%td= link_to(event.name, event_path(event))
							%td= event.start_time_formatted
							%td= event.location
							%td= event.status
							%td= event.attendees.count

