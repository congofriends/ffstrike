= content_for :title, "Support Network"
.container
  .row
    =image_tag @movement.image, :class => "movement_avatar"
  .row.event-list
    .col-sm-6
      %h2 Our Support Network:
    .col-sm-2.col-sm-offset-2
      - if !current_user.nil?
        =link_to 'CREATE GROUP', new_movement_path(@movement, {parent_id: @movement.id}), class: 'btn'
      - else
        =link_to 'CREATE GROUP', new_unauthenticated_submovement_path(@movement, {parent_id: @movement.id}), class: 'btn'

  - @support_network.each do |chapter|
    = render 'group_panel', chapter: chapter

    / .row.event-list
    /   .col-sm-4
    /     =image_tag chapter.image, :class => "movement_avatar"
    /   .col-sm-8
    /     .row
    /       %h3.text-center= link_to chapter.name, movement_path(chapter)



