.tab-pane#support
  .well
    %table.table.table-bordered.table-striped.sortable#group-attendees-table
      %tr
        %th Name
        %th Event
        %th Email
        %th Phone number
        %th Point person?
        %th Notes
      - @group.events.each do |event|
        - event.attendees.each do |attendee|
          %tr
            %td= attendee.name
            %td= link_to event.name, event_path(event)
            %td= attendee.email
            %td= attendee.phone
            %td= attendee.volunteer_for(event) ? "yes" : "no"
            %td= attendee.notes_for(event.id)

/ = link_to_modal "INVITE COORDINATORS", new_user_invitation_path, { class: 'btn ctrl-btn' }
= link_to "EXPORT ATTENDEE LIST", export_csv_path(@group), class: 'btn ctrl-btn'
/ = render "movements/email"
