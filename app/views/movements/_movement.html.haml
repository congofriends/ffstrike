.row.event-list
  .col-sm-6
    =image_tag movement.image, class: "movement_avatar"
  .col-sm-6
    .row
      %h3.text-center= link_to movement.name, movement_path(movement)
      .tagline.text-center= movement.tagline
      %br
    .row
      - if current_user && movement.users.include?(current_user)
        .col-xs-6
          .text-center= link_to "DASHBOARD", dashboard_movement_path(movement, anchor: "movement"), class: "btn"
      .col-xs-6
        .text-center= link_to "EVENTS", movement_events_path(movement), class: 'btn'

