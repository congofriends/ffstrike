=image_tag Movement.first.image, class: "bg"
.container
	.well
		%h4.event_type_header Let's Get Started by Picking an Event Type
		- @event_types.each do |event_type| 
			- if current_user
				.group-panel
					%div
						= link_to new_movement_event_path(@movement, {type: event_type}) do
							%a.sponsor-link{href: new_movement_event_path(@movement, {type: event_type})}
								%img.group-image{alt: "", src: asset_path("congo.jpg")}/
								%ins.ins		
					%div
						= link_to new_movement_event_path(@movement, {type: event_type}) do
							.text-center.group-name= event_type			
			- else
				.group-panel
					%div
						= link_to new_movement_unauthenticated_event_path(@movement, {type: event_type }) do
							%a.sponsor-link{href: new_movement_unauthenticated_event_path(@movement, {type: event_type }) }
								%img.group-image{alt: "", src: asset_path("congo.jpg")}/
								%ins.ins
					%div
						= link_to new_movement_event_path(@movement, {type: event_type}) do
							.text-center.group-name= event_type		
						 