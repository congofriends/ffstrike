=image_tag Movement.first.image, class: "bg"
.container
	.well
		%h4.event_type_header Let's Get Started by Picking an Event Type
	.center-event-type
		- @event_types.each do |event_type|
			- if current_user
				.group-panel-event-type
					%div
						= link_to new_movement_event_path(@movement, {type: event_type.name}) do
							%a{href: new_movement_event_path(@movement, {type: event_type.name})}
								%img.group-image-event-type{alt: "", src: asset_path(Movement.first.image)}/
					%div
						= link_to new_movement_event_path(@movement, {type: event_type.name}) do
							.text-center.group-name-event-type= event_type.name
			- else
				.group-panel-event-type
					%div
						= link_to new_movement_unauthenticated_event_path(@movement, {type: event_type.name}) do
							%a{href: new_movement_unauthenticated_event_path(@movement, {type: event_type.name}) }
								%img.group-image-event-type{alt: "", src: asset_path(Movement.first.image)}
					%div
						= link_to new_movement_unauthenticated_event_path(@movement, {type: event_type.name}) do
							.text-center.group-name-event-type= event_type.name
