<div class="col-md-3">
  <div class='panel panel-default'>
    <div class='panel-heading'>
      <p class='text-center'><%= link_to movement.name, movement_path(movement) %></p> 
    </div>

    <div class='panel-body'>
      <%= link_to image_tag(movement.image.url, class: 'front-page img-responsive center-block'), movement_path(movement) %>
    </div>

    <div class='panel-footer'>
      <div class='text-left'>
        <p class="text-right"><%= movement.number_of_attendees %> Attendees</p>
        <p class="small">Locations: <%= movement.locations %></p>
        <p class="small">Organizer: <%= movement.user.email if !movement.user_id.nil? %> </p>
        <p class="small">Summary:<em> <%= movement.tagline %> </em> </p>
      </div>
      <%= link_to "See more details", visitor_path(movement), class: "btn btn-success btn-sm" %>
      <p class="text-muted small"><em> Created <%= time_ago_in_words(movement.created_at) %> ago </em></p>
    </div>
  </div>
</div>
