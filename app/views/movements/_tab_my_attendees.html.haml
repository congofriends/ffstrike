.tab-pane#attendees
  .well
    %table.responsive.table.table-bordered.table-striped.sortable
      %tr
        %th Name
        %th Event
        %th Email
        %th Phone number
        %th Point person?
        %th Notes
      - events.each do |event|
        - event.attendees.each do |attendee|
          %tr
            %td= attendee.name
            %td= link_to event.name, event_path(event)
            %td= attendee.email
            %td= attendee.phone
            %td= attendee.volunteer_for(event) ? "yes" : "no"
            %td= attendee.notes_for(event.id)