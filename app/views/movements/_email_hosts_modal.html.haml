:javascript
  $(function() {
    $( "#dialog-host" ).dialog({
      autoOpen: false,
      modal: true,
      show: {
        effect: "blind",
        duration: 1000
      },
      hide: {
        effect: "explode",
        duration: 1000
      }
    });

    $( "#opener-host" ).click(function() {
      $( "#dialog-host" ).dialog( "open" );
    });
  });

#dialog-host{title: "#{t('.title')}"}
  = form_tag(mail_hosts_path(movement_id: @group), method: "post") do
    = label_tag t('.subject')
    = text_area_tag "subject", nil, class: 'form-control'
    = label_tag t('.message')
    = text_area_tag "message", nil, placeholder: t('.placeholder'), class: 'form-control'
    = submit_tag t('.email_hosts'), class: 'btn ctrl-btn', id: 'Send_Email'
%button#opener-host.btn.ctrl-btn=t('.email_hosts')
