.row
  .col-md-5
    .well
      .form-horizontal
        = form_for @movement do |form|
          %fieldset
            .form-group
              = form.label :name, "Name *", { class: 'col-md-4 control-label' }
              .col-md-8
                = form.text_field :name, { class: 'form-control' }

            .form-group
              = form.label :tagline, { class: 'col-md-4 control-label' }
              .col-md-8
                = form.text_area :tagline, { class: 'form-control' }

            .form-group
              = form.label :call_to_action, { class: 'col-md-4 control-label' }
              .col-md-8
                = form.text_area :call_to_action, { class: 'form-control' }

            .form-group
              = form.label :extended_description, { class: 'col-md-4 control-label' }
              .col-md-8
                = form.text_area :extended_description, { class: 'form-control' }

            .form-group
              = form.label :location, { class: 'col-md-4 control-label' }
              .col-md-8
                = form.text_area :location, { class: 'form-control' }

            .form-group
              = form.label :about_creator, { class: 'col-md-4 control-label' }
              .col-md-8
                = form.text_area :about_creator, { class: 'form-control' }

            .form-group
              = form.label :image, { class: 'col-md-4 control-label' }
              .col-md-8
                = form.file_field :image

            .form-group
              = form.label :video, "Youtube Link", { class: 'col-md-4 control-label' }
              .col-md-8
                = form.text_field :video, { class: 'form-control' }

            .form-group
              = form.label :draft, "Save as draft", class: 'col-md-4 control-label'
              .col-md-8
                = form.check_box :draft

            .form-group
              .col-md-8.col-md-offset-4
                = form.submit 'Create Movement', class: "btn btn-primary", id: "create_movement"

  .col-md-7
    %h1 It's time to create a movement.
    %h4 Once you enter the relevant details, you'll be able to create events for your supporters to attend. Your events will be searchable via the home page.
