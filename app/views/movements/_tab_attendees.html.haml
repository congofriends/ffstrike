.tab-pane#attendees
  .well
    %table.table.table-bordered.table-striped
      %tr
        %th Location 
        %th Date
        %th Details 
        %th See Attendees
      - @movement.rallies.each do |rally|
        %tr
          %td= rally.location
          %td Date TBD
          %td= rally.notes
          %td 
            %button.btn{type: "button", data: {toggle: "collapse", target: "#rally#{rally.id}"}}
              Attendees 
              %span.glyphicon.glyphicon-hand-down
        %tr.collapse{id: "rally#{rally.id}"}
          %td{colspan: "4"}
            %table.table.table-bordered.table-striped
              %tr
                %th Name
                %th Email
                %th Point person?
                %th Notes
              - rally.attendees.each do |attendee|
                %tr
                  %td= attendee.name
                  %td= attendee.email
                  %td= attendee.assignments.count > 0 ? "yes" : "no"
                  %td Notes Disabled
              


