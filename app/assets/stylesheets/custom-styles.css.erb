.alert {
  padding: 4px;
}

.whitespace-for-flash {
  margin-top: 40px;
}

.whitespace-for-flash-nav {
  margin-bottom: 4px;
}

.best_in_place input {
  width: 400px;
}

.best_in_place:hover, .do_hover {
  padding-right: 1.5em;
  padding-left: 0.3em;
  font-size: 16px;
  color: #3A5F86;
  background: url(<%= asset_path "pencil_icon.png" %>) no-repeat right;
  cursor: pointer;
}

.tooltip-inner {
  background-color: rgba(164, 227, 195, 1);
  color: #050a10;
}

.task-list ul li {
  background: url(<%= asset_path "arrow.png" %>) no-repeat 0 6px;
  background-size: 21px 15px;
  list-style: none;
  margin: 10px 0;
  font-size: 1.1em;
  padding-left: 25px;
}
