/* CSS */
.front-page {
  height: 150px;
}

.content {
  color: #ebebeb;
  padding: 200px;
  text-align: center
}

.bcg {
  background: {
    position: center center;
    repeat: no-repeat;
    attachment: fixed;
    size: cover;
  }

  height: 80%;
  width: 100%;

  h1, a { 
    color: white;
    font-size: 100px;
  }

  a { 
    text-decoration: underline;
    &:hover {color: #eeeeee;}
  }
}

#slide-1 .bcg {
  background-image: image-url('home1.png');
  margin-top: -10px;
}
#slide-2 .bcg {background-image: image-url('home2.png');}
