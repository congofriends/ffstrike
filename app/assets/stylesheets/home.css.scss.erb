/* CSS */
.front-page {
  height: 150px;
}

.container {
    position:relative;
    left: 0;
    top: 0;
}

.content {
  color: #ebebeb;
  padding: 200px;
  text-align: center
}

.banner {
  overflow: hidden;
  position: relative;
  border-bottom: 1px solid #e7e7e7;
  padding_bottom: 15px;
}

h1 {
  font-family: 'Montserrat', sans seif;
  font-size: 40px;
  text-transform: uppercase;
  text-align: center;
}

.home_btns {
  border-top: 1px solid #e7e7e7;
  padding: 15px;
}

.info {
  border-bottom: 1px solid #e7e7e7;
  padding: 15px, 15px;
  padding-bottom: 20px;
  text-transform: uppercase;
  text-align: center;
}

.bcg {
  background: {
    position: center center;
    repeat: no-repeat;
    attachment: fixed;
    size: cover;
  }

  height: 80%;
  width: 100%;

  h1, a {
    color: white;
    font-size: 100px;
  }

  a {
    text-decoration: underline;
    &:hover {color: #eeeeee;}
  }
}

#slide-1 .bcg {
  background-image: image-url('home1.png');
  margin-top: -10px;
}
#slide-2 .bcg {background-image: image-url('home2.png');}
#slide-3 .bcg {background-image: image-url('home3.png');}

li.dropdown > a.dropdown-toggle.locale { color: #466CB1;}
ul.dropdown-menu { min-width: 50px;}
