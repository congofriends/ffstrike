/* CSS */
.content {
  color: #ebebeb;
  padding: 200px;
  text-align: center
}
.bcg {
  background-position: center center;
  background-repeat: no-repeat;
  background-attachment: fixed;
  background-size: cover;
  height: 100%;
  width: 100%;
}

#slide-1 .bcg { 
  background-image: image-url('home1.png');
  height: 80%;
  h1 {
    color: white;
    font-size: 100px;
  }
}

#slide-2 .bcg {
  background-image: image-url('home2.png');
  height: 80%;
  h1 {
    color: white;
    font-size: 100px;
  }
}

