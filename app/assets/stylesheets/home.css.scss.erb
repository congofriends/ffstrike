/* CSS */
.front-page {
  height: 150px;
}

.container.transparent {
  background-color: transparent;
  box-shadow: none;
}

.container {
  position:relative;
  left: 0;
  top: 0;
  background-color: white;
  border-radius: 0 0 10px 10px;
  box-shadow: 0 0 20px black;
  padding: 20px;
}

@media screen and (max-width: 480px) {
  #flash_messages .container.no-header{
    width: 100%;
    height: 100%;
  }
}

.container.no-header{
  width: 60%%;
  height: 80%%;
}

.content {
  color: #ebebeb;
  padding: 200px;
  text-align: center
}

.banner {
  overflow: hidden;
  position: relative;
  border-bottom: 1px solid #e7e7e7;
  padding_bottom: 15px;
}

.home-quote {
  font-size: 40px;
  text-transform: uppercase;
  text-align: center;
}

.congo-dates{
    text-align: center;
    color: #ffffff;
    background-color: transparent;
    top: 295px;
}

.home_btns {
  border-top: 1px solid #e7e7e7;
  padding: 15px;
}

.info {
  font-size: 14px;
  border-bottom: 1px solid #e7e7e7;
  padding: 15px, 15px;
  padding-bottom: 20px;
  text-transform: uppercase;
  text-align: center;
}

.bcg {
  background: {
    position: center center;
    repeat: no-repeat;
    attachment: fixed;
    size: cover;
  }

  height: 80%;
  width: 100%;

  h1, a {
    color: white;
    font-size: 100px;
  }

  a {
    text-decoration: underline;
    &:hover {color: #eeeeee;}
  }
}

#slide-1 .bcg {
  background-image: image-url('home1.png');
  margin-top: -10px;
}
#slide-2 .bcg {background-image: image-url('home2.png');}
#slide-3 .bcg {background-image: image-url('home3.png');}

li.dropdown > a.dropdown-toggle.locale { color: #466CB1;}
ul.dropdown-menu { min-width: 50px;}

img.bg {
  /* Set rules to fill background */
  min-height: 100%;
  min-width: 1024px;

  /* Set up proportionate scaling */
  width: 100%;
  height: auto;

  /* Set up positioning */
  position: fixed;
  top: 0;
  left: 0;
}

@media screen and (max-width: 1024px) {
  img.bg {
    left: 50%;
    margin-left: -512px;   /* 50% */
  }
}

.footer, .navbar-default {
  background-color: transparent;
  border-color: transparent;
}

.page-wrap-header {
  background-color: orange;
  border-radius: 10px 10px 0 0;
  box-shadow: 0 0 20px black;
  background-origin: padding-box;
  background-clip: border-box;
  background-attachment: scroll;
  position: relative;
  left: 30px;
  display: block;
  padding: 20px;
  max-width: 450px;
}

.header-text {
  font-weight: bold;
  text-transform: uppercase;
}

.content-header {
  background-color: orange;
  border-radius: 10px 10px 0 0;
  box-shadow: 0 0 20px black;
  background-origin: padding-box;
  background-clip: border-box;
  background-attachment: scroll;
  display: block;
  position: relative;
  padding: 10px;
}

.page-wrap{
  background-attachment: scroll;
  background-clip: border-box;
  background-color: rgba(255, 255, 255, .8);
  background-origin: padding-box;
  background-size: auto;
  border-radius: 0 0 10px 10px;
  box-shadow: 0 0 20px black;
  display: block;
  padding: 20px;
  position: relative;
  left: 30px;
  max-width: 450px;
}

.footer-transparent {
  background-color: transparent;
  box-shadow: none;
}

.form-container {

}

.no-header {
  border-radius: 10px;
}

.sign-up-in {
  max-width: 400px;
}