.social.facebook {background: #3b5998 image-url('fb_logo.png') 3px 1px no-repeat;}
.social.twitter  {background: #292f33 image-url('twitter_logo.png') 3px 4px no-repeat;}
.social.mailto   {background: #35CCC1 image-url('mailto_logo.png') 2px -1px no-repeat;}

a.social {
  background-color: rgba(45,118,185, .42);
  border-radius: 15px;
  display: block;
  color: #141414;
  height: 32px;
  line-height: 30px;
  margin: 10px 0 0;
  text-indent: 50px;
  width: 38px;
  white-space: nowrap;
  -webkit-transition: width .25s ease-in-out, background-color .25s ease-in-out;
  -moz-transition: width .25s ease-in-out, background-color .25s ease-in-out;
  -o-transition: width .25s ease-in-out, background-color .25s ease-in-out;
  transition: width .25s ease-in-out, background-color .25s ease-in-out;
  -webkit-box-shadow: rgba(0,0,0, .28) 0 2px 3px;
  -moz-box-shadow: rgba(0,0,0, .28) 0 2px 3px;
   -o-box-shadow: rgba(0,0,0, .28) 0 2px 3px;
   box-shadow: rgba(0,0,0, .28) 0 2px 3px;

   &:hover {
      width: 208px;
      text-decoration: none;
      color: #EEDFDF;
   }
}

.panel-mvmt-sm {
  width: 320px;
  float: left;
  height: 250px;
  margin-right: 10px;
  background-color: #F3F6F6;
  border-top-width: 0.5px;
  
  .lead {margin-bottom: 0px;}
  .location {color: #F84747;}

  #video { 
    width: 280px;
