@import 'colors';

h3 {
  color: $text-color;
  margin-top: 0px;

  a, a:active, a:focus, a:visited {
    color: $text-color;
  }

  a:hover {
    color: LightGray;
  }
}

.event_dash_legend {}

.event-name-dash {}

.footer {
  margin-top: 10px;
  margin-bottom: 30px;
  padding-top: 20px;
  padding-bottom: 20px;
  border-top: 1px solid #e7e7e7;
}

.alert {
  padding: 4px;
  font-size: 30px;
  text-align: center;
  font-weight: bold;
}

.whitespace-for-flash {
  margin-top: 40px;
}

.whitespace-for-flash-nav {
  margin-bottom: 4px;
}

.best_in_place {
  padding: 2px;
  &:hover, .do_hover {
    color: black;
    border-style: none;
    padding-right: 1.5em;
    background: url(<%= asset_path "pencil_icon.png" %>) no-repeat right;
    cursor: pointer;
    }
  input {width: 400px;}
}

.tooltip-inner {
  background-color: rgba(164, 227, 195, 1);
  color: #050a10;
}

.task-list ul li {
  background: url(<%= asset_path "arrow.png" %>) no-repeat 0 6px;
  background-size: 21px 15px;
  list-style: none;
  margin: 10px 0;
  font-size: 1.1em;
  padding-left: 25px;
}

#events {
  .col-sm-1, .form-group {
  margin-bottom: 0px;
  }
}

#event_date.form-control.datepicker,
#event_time.form-control.timepicker {
  width: 46%;
}

.event-date {
  margin-right: -60px;
}

.chapters {
  width: 80%;
  float:right;
}

.movement-panel-footer {
  height: 215px;
}

.event-panel-header {
  height: 162px;
}

.event-panel-footer {
  height: 380px;
}

.movement_avatar {
  padding: 15px;
  width: 100%;
}

.tagline {
  font-style: oblique;
  font-size: 20px;
}

.movement_info h3 {
  font-size: 20px;
}

.more_movements_row {
  margin: 35px 0px;
}

.more_movements_row * {
  display: inline;
}

.create_movement_span {
  float: left;
}

.search_event_span {
  float: right;
}

.search{
  margin-top: 23px;
  float:right;
  width: 100%;
}

#map-canvas {
  height: 100%;
  width: 100%;
  min-height: 400px;
  margin-left: auto;
  margin-right: auto;
}

#map {
  padding-left: 8em;
  margin-left: auto;
  margin-right: auto;
  color: blue;
  font-weight: bold;
}

#sub_movements { }

.move {
  padding: 10px;
  height: 100%;
  .front-page { height: 160px; }
}

.media-move {
  display: inline-flex;
}

.move-name {
  font-size: 21px;
  font-style: normal;
  margin-left: 40px;

  > p { font-size: 16px; }
  > p.txt-sm { font-size: 10px; }
}

div > .mvmt-attendee, div > .mvmt-location {
  font-size: 12px;
  margin: 0px 10px 10px 0px;
}

div > .mvmt-attendee { color: blue; }

.mvmt-details { display: -webkit-box; }

.actions {
  display: none;
}

.bs-component:hover .actions{
  display: inline-flex;
  font-size: 11px;
  margin: -120px 5px 0px 0px;

  a { margin: 0px 5px 5px 0px; }
  div { z-index: 1; }
}

.event-header{
  margin-top: 10px;
  text-align: center;
}

.desc{
  text-align: center;
}

.attend-button{
  text-align: center;
  margin-top: 25px;
}

.mvmnt-details {
  a.mvmt-navigation { color: #191d1d; }

  &:hover a {
    color: #49b1ba;
    text-decoration: none;
  }
}

.mvmt-location  {
  float: left;
}

.mvmt-chapters  {
  float: right;
  color: blue;
  font-size: 10px;
  font-weight: bold;
}

.mvmt-chapters:hover {
  color: #49b1ba;
  text-decoration: none;
}

.format_chapter{
  width: 80%;
  float: right;
}

.float_left{
  float: left;
  width: 40%;
}

.float_right{
  float: right;
}

.delete-btn{
  float: right;
  background-color: red;
}

.move-name{
  width: 70%;
}
.img-movement{
    display: block;
    width: 30%;
    max-width:200px;
    max-height:95px;
    width: auto;
    height: auto;
}

.badge {
  font-weight: 100;
  padding: 7px 7px 7px 7px;
  margin-bottom: 10px;
  margin-right: 10px;
  font-size: 18px;
}

.datetimepicker {
  width: 210px;
}

#sub_movements > .col-md-7 { float: none; }

.breadcrumb-nav {
  padding-top: 7px;
  .breadcrumb {
    margin-bottom: 0px;
  }
}

.dash_btn {
  float: right;
  margin-left: auto;
  margin-right: auto;
}

.marker_image {
  float: right;
  height: 42px;
}

.new-message {
  height: 100px;
}

.contact-event-host {
  height: 600px;
}

.modal-field  {
  float: left;
  width: 25%;
}

.contact-send-btn {
  margin-top: 20px;
}

.modal-input {
  width: 75%;
}

.floatRight{
  float: right;
}

.contentWindow{
  min-width: 300px;
}

.modal {
  width: 450px;
  height: 550px;
  line-height: 1.25;
  text-align: left;
  text-indent: 0;
  background: $background-color;
  border: 2px solid #fff;
}

.modal a.close-modal {
margin: 10px;
background: url(<%= asset_path "close.png" %>) no-repeat 7px 7px;
}

ul { list-style-type: none; }

#search_input{
  width: 40%;
  height: 40px
}

#search_events{
  padding: inherit;
}

.ctrl-btn {
  width: 100%;
  margin-top: 1em;
}

.attend-form
{
  padding: 0 4em 1em 4em;
}

.label-field{ text-align: left}

.miles-select {
  display: inline;
  width: 120px;
}

#name_id {
  font-size: 20px;
}

.header-footer {
  font-size: 18px;
  margin: 0px 4px 0px 4px;
}

#share-logo {
  padding-left: 10px;
}

.network-button, .events-button{
  text-decoration: none !important;
}

.photo {
    display: block;
    text-align: center;
    line-height: 158px;
    margin-bottom: 10px;
}
a.sponsor-link {
    display: inline-block;
    position: relative;
    line-height: 0;
}
img.sponsor-img  {
    border: none;
    vertical-align: middle;
    width: 100%;
}
.ins {
    background: url(<%= asset_path "badge.png" %>) no-repeat 0 0;
    position: absolute;
    right: 0;
    top: 0;
    padding: 5px;
    background-position:center;
    background-size: 100%;
    width: 50px;
    height: 50px;
}

h1, h2, h3, h4, h5, h6 , p, div{
    font-family: 'Montserrat', sans-serif;
}

.btn {
  border-radius: 0px;
  background-color: #AA3939;
}

.btn-attend, .btn-contact, .btn-host, .event_avatar {
    width: 100%;
}

.btn-contact {
  background-color: #DFDDDD;
}

.btn-cancel {
  margin-bottom: -60px;
}

body {
  background: url(<%= asset_path "cream_dust.png" %>) repeat 0 0;
}

a {
    color: #AA3939;
    text-decoration: none;
}

.col-xs-6, {
  padding-right: 0px;
  padding-left: 0px;
}

#no-padding {
  padding-right: -15px;
  padding-left: -15px;
}

#video {
  width: 100%;
  height: 275px;
  margin-top: 40px;
}

div.col-sm-6 img.movement_avatar {
  padding-right: 0px;
  padding-left: 0px;
}
