@import 'colors';

body { 
  background: $primary-color;
}

.support-network {
  padding: 10px;
  background-color: $secondary-color1;
}

.alert {
  padding: 4px;
}

.whitespace-for-flash {
  margin-top: 40px;
}

.whitespace-for-flash-nav {
  margin-bottom: 4px;
}

.best_in_place {
  &:hover, .do_hover {
    padding-right: 1.5em;
    background: url(<%= asset_path "pencil_icon.png" %>) no-repeat right;
    cursor: pointer;
    }
  input {width: 400px;}
}

.tooltip-inner {
  background-color: rgba(164, 227, 195, 1);
  color: #050a10;
}

.task-list ul li {
  background: url(<%= asset_path "arrow.png" %>) no-repeat 0 6px;
  background-size: 21px 15px;
  list-style: none;
  margin: 10px 0;
  font-size: 1.1em;
  padding-left: 25px;
}

#events {
  .col-sm-1, .form-group {
  margin-bottom: 0px;
  }
}

#event_date.form-control.datepicker,
#event_time.form-control.timepicker {
  width: 46%;
}

.event-date {
  margin-right: -60px;
}

.footer {
  font-size: .9em;
  position:fixed;
  left:0px;
  overflow: hidden;
  bottom:0px;
  height:30px;
  margin-top: 40px;
  width: 100%;
  background: #999;
  opacity: 0.4;
}

.footer:hover{
    opacity: 0.6;
}

.chapters {
  width: 80%;
  float:right;
}

.movement-panel-footer {
  height: 215px;
}

.event-panel-header {
  height: 162px;
}

.event-panel-footer {
  height: 380px;
}

.tagline {
  font-style: oblique;
  font-size: 20px;
}

.movement_info h3 {
  font-size: 20px;
}

.more_movements_row {
  margin: 35px 0px;
}

.more_movements_row * {
  display: inline;
}

.create_movement_span {
  float: left;
}

.search_event_span {
  float: right;
}

#map-canvas {
  height: 100%;
  min-height: 400px;
}

#map {
  margin-left: auto;
  margin-right: auto;
  color: blue;
  font-weight: bold;
}

.actions {
  display: none;
}

.event-header{
  margin-top: 10px;
  text-align: center;
}

.desc{
  text-align: center;
}

.attend-button{
  text-align: center;
  margin-top: 25px;
}

.mvmt-chapters  {
  float: right;
  color: blue;
  font-size: 10px;
  font-weight: bold;
}

.mvmt-chapters:hover {
  color: #49b1ba;
  text-decoration: none;
}

.format_chapter{
  width: 80%;
  float: right;
}

.float_left{
  float: left;
  width: 40%;

}

.move-name{
  width: 70%;
}

.img-movement{
    display: block;
    float: left;
    width: 30%;
    max-width:200px;
    max-height:95px;
    width: auto;
    height: auto;
}

.badge {
  font-weight: 100;
  padding: 7px 7px 7px 7px;
  margin-bottom: 10px;
  margin-right: 10px;
  font-size: 18px;
}

.datetimepicker {
  width: 250px;
  float: left;
}

.breadcrumb-nav {
  padding-top: 7px;
  .breadcrumb {
    margin-bottom: 0px;
  }
}

#event_start_time, #event_end_time {
  width: 300px;
}

.dash_btn {
  float: right;
  margin-left: auto;
  margin-right: auto;
}

.marker_image {
  float: right;
  height: 42px;
}
