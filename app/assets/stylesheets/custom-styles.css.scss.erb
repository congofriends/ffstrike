.alert {
  padding: 4px;
}

.whitespace-for-flash {
  margin-top: 40px;
}

.whitespace-for-flash-nav {
  margin-bottom: 4px;
}

.best_in_place {
  &:hover, .do_hover {
    padding-right: 1.5em;
    background: url(<%= asset_path "pencil_icon.png" %>) no-repeat right;
    cursor: pointer;
    }
  input {width: 400px;}
}

.tooltip-inner {
  background-color: rgba(164, 227, 195, 1);
  color: #050a10;
}

.task-list ul li {
  background: url(<%= asset_path "arrow.png" %>) no-repeat 0 6px;
  background-size: 21px 15px;
  list-style: none;
  margin: 10px 0;
  font-size: 1.1em;
  padding-left: 25px;
}

#events {
  .col-sm-1, .form-group {
  margin-bottom: 0px;
  }
}

#event_date.form-control.datepicker,
#event_time.form-control.timepicker {
  width: 46%;
}

.event-date {
  margin-right: -60px;
}

.footer {
  font-size: .9em;
  position:fixed;
  left:0px;
  overflow: hidden;
  bottom:0px;
  height:30px;
  margin-top: 40px;
  width: 100%;
  background: #999;
  opacity: 0.4;
}

.footer:hover{
    opacity: 0.6;
}

.chapters {
  width: 80%;
  float:right;
}

.movement-panel-footer {
  height: 215px;
}

.event-panel-header {
  height: 162px;
}

.event-panel-footer {
  height: 380px;
}

.movement_avatar, .event_avatar {
  float: right;
  margin: 50px;
}

.tagline {
  font-style: oblique;
  font-size: 20px;
}

.movement_info h3 {
  font-size: 20px;
}

.more_movements_row {
  margin: 35px 0px;
}

.more_movements_row * {
  display: inline;
}

.create_movement_span {
  float: left;
}

.search_event_span {
  float: right;
}

#map-canvas {
  height: 100%;
  width: 100%;
  min-height: 400px;
  max-width: 700px;
  margin-left: auto;
  margin-right: auto;
}

#map {
  padding-left: 8em;
  margin-left: auto;
  margin-right: auto;
  color: blue;
  font-weight: bold;
}

#sub_movements { }

.move {
  padding: 10px;
  height: 100%;
  .front-page { height: 160px; }
}

.media-move {
  display: inline-flex;
}

.move-name {
  font-size: 21px;
  font-style: normal;
  margin-left: 40px;

  > p { font-size: 16px; }
  > p.txt-sm { font-size: 10px; }
}

div > .mvmt-attendee, div > .mvmt-location {
  font-size: 12px;
  margin: 0px 10px 10px 0px;
}

div > .mvmt-attendee { color: blue; }

.mvmt-details { display: -webkit-box; }

.actions {
  display: none;
}

.bs-component:hover .actions{
  display: inline-flex;
  font-size: 11px;
  margin: -120px 5px 0px 0px;

  a { margin: 0px 5px 5px 0px; }
  div { z-index: 1; }
}

.event-header{
  margin-top: 10px;
  text-align: center;
}

.desc{
  text-align: center;
}

.attend-button{
  text-align: center;
  margin-top: 25px;
}

.mvmnt-details {
  a.mvmt-navigation { color: #191d1d; }

  &:hover a {
    color: #49b1ba;
    text-decoration: none;
  }
}

.mvmt-location  {
  float: left;
}

.mvmt-chapters  {
  float: right;
  color: blue;
  font-size: 10px;
  font-weight: bold;
}

.mvmt-chapters:hover {
  color: #49b1ba;
  text-decoration: none;
}

.format_chapter{
  width: 80%;
  float: right;
}

.float_left{
  float: left;
  width: 40%;

}

.move-name{
  width: 70%;
}
.img-movement{
    display: block;
    width: 30%;
    max-width:200px;
    max-height:95px;
    width: auto;
    height: auto;
}
.movement-content {
  display: -webkit-box;

  .movements { width: 65%; margin-right: 70px; }
  .host-event { width: 35%; }
}

.badge {
  font-weight: 100;
  padding: 7px 7px 7px 7px;
  margin-bottom: 10px;
  margin-right: 10px;
  font-size: 18px;
}

.datetimepicker {
  width: 250px;
  float: left;
}

#sub_movements > .col-md-7 { float: none; }

.breadcrumb-nav {
  padding-top: 7px;
  .breadcrumb {
    margin-bottom: 0px;
  }
}

#event_start_time, #event_end_time {
  width: 300px;
}

.dash_btn {
  float: right;
  margin-left: auto;
  margin-right: auto;
}

.marker_image {
  float: right;
  height: 42px;
}
