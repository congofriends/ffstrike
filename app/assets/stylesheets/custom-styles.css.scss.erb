.alert {
  padding: 4px;
}

.whitespace-for-flash {
  margin-top: 40px;
}

.whitespace-for-flash-nav {
  margin-bottom: 4px;
}

.best_in_place {
  &:hover, .do_hover {
    padding-right: 1.5em;
    background: url(<%= asset_path "pencil_icon.png" %>) no-repeat right;
    cursor: pointer;
    }
  input {width: 400px;}
}

.tooltip-inner {
  background-color: rgba(164, 227, 195, 1);
  color: #050a10;
}

.task-list ul li {
  background: url(<%= asset_path "arrow.png" %>) no-repeat 0 6px;
  background-size: 21px 15px;
  list-style: none;
  margin: 10px 0;
  font-size: 1.1em;
  padding-left: 25px;
}

#events {
  .col-sm-1, .form-group {
  margin-bottom: 0px;
  }
}

#event_date.form-control.datepicker,
#event_time.form-control.timepicker {
  width: 46%;
}

.event-date {
  margin-right: -60px;
}

.footer {
  bottom: 0;
  display: block;
  position: relative;
  font-size: .9em;
}

.movement-panel-footer {
  height: 215px;
}

.event-panel-header {
  height: 162px;
}

.event-panel-footer {
  height: 380px;
}

.movement_avatar {
  float: right;
  margin: 50px;
}

.tagline {
  font-style: oblique;
  font-size: 20px;
}

.movement_info h3 {
  font-size: 20px;
}

.more_movements_row {
  margin: 35px 0px;
}

.more_movements_row * {
  display: inline;
}

.create_movement_span {
  float: left;
}

.search_event_span {
  float: right;
}

#map-canvas {
  height: 100%;
  width: 100%;
  min-height: 400px;
  min-width: 400px;
  margin: 10px;
}

#sub_movements { }

.move {
  padding: 0px;
  height: 120px;
  .front-page { height: 120px; }
}

.media-move {
  display: inline-flex;
}

.move-name {
  font-size: 21px;
  font-style: normal;
  margin-left: 40px;

  > p { font-size: 16px; }
  > p.txt-sm { font-size: 10px; }
}

div > .mvmt-attendee, div > .mvmt-location {
  font-size: 12px;
  margin: 0px 10px 10px 0px;
}

div > .mvmt-attendee { color: blue; }

.mvmt-details { display: -webkit-box; }

.actions {
  display: none;
}

.bs-component:hover .actions{
  display: inline-flex;
  font-size: 11px;
  margin: -120px 5px 0px 0px;

  a { margin: 0px 5px 5px 0px; }
  div { z-index: 1; }
}

.eventName{
  float: left;
  margin-right: 10px;
}

.attendBtn{
  float: left;
  margin-top: 25px;
}

a.mvmt-navigation {
  color: #191d1d;

  &:hover {
    color: #49b1ba;
    text-decoration: none;
  }
}

.movement-content {
  display: -webkit-box;

  .movements { width: 65%; margin-right: 100px; }
  .host-event { width: 35%; }
}

.badge {
  font-weight: 100;
  padding: 7px 7px 7px 7px;
  margin-bottom: 10px;
  margin-right: 10px;
  font-size: 18px;
}
