.group-panel {
	width: 239px;
	height: 200px;
	float: left;
	margin: 15px;
	padding:auto;
	background-color: white;
	border-style: solid;
	border-width: thin;
	border-color: lightgray;
	border-radius: 10px;
}

.group-image {
	height: 175px;
	width: 100%;
	max-width: 250px;
	padding: 0px;
	border-top-left-radius: 10px;
	border-top-right-radius: 10px;
}

.group-panel-event-type {
	width: 45%;
	height: 45%;
	min-width: 300px;
	float: left;
	margin: 20px;
	padding:auto;
	background-color: white;
	border-style: solid;
	border-width: thin;
	border-color: lightgray;
}

.pad20{
	padding: 0 20px;
}

.mar30{
	margin: 0 30px;
}

.group-image-event-type {
	min-width: 300px;
	min-height: 400px;
	width: 100%;
	padding: 0px;
}


span.text-content {
  color: white;
  cursor: pointer;
  display: table;
  height: 30%;
  position: absolute;
  top: 14%;
  width: 43%;
  opacity: 0;
  -webkit-transition: opacity 500ms;
  -moz-transition: opacity 500ms;
  -o-transition: opacity 500ms;
  transition: opacity 500ms;
}

span.text-content span {
  display: table-cell;
  vertical-align: middle;
  padding: 10px;
  font-size: 16px;
}

div.group-panel-event-type div:hover span.text-content {
  opacity: 1;
}


div.group-panel-event-type div:hover .mission-panel{
  opacity: .7;

}

@media all and (max-width: 990px) {
	.group-panel-event-type {
		width: 90%;
		height: 90%;
	}
	.group-image-event-type {
		min-height: 300px;
	}

	span.text-content {
		width:85%;
	}

	span.text-content.purpose-pic {
		top: 45%;
	}

}

.group-name {
  font-size: 15px;
  color: black;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.group-name-event-type {
  font-size: 30px;
	min-width: 300px;
  background-color: orange;
  font-family: Lato, sans-serif;
  color: white;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.submenu-field {
	width: 100 px;
}

.submenu-list {
	width: 200 px;
}

.dropdown-submenu{position:relative;}
.dropdown-submenu>.dropdown-menu{top:0;left:auto; width: 200px; right:100%; margin-top:-6px;margin-left:-1px;-webkit-border-radius:0 6px 6px 6px;-moz-border-radius:0 6px 6px 6px;border-radius:0 6px 6px 6px;}
.dropdown-submenu:hover>.dropdown-menu{display:block;}
.dropdown-submenu>a:after{display:block;content:" ";float:left;width:0;height:0;border-color:transparent;border-style:solid;border-width:5px 5px 5px 0px;border-right-color:#cccccc;margin-top:5px;margin-right:-10px;}
<!-- .dropdown-submenu > a:after {position: absolute; left: 7px; top: 3px; float: none; border-right-color: #cccccc; border-width: 5px 5px 5px0;} -->
.dropdown-submenu:hover>a:after{border-right-color:#ffffff;}
.dropdown-submenu.pull-left{float:none;}.dropdown-submenu.pull-left>.dropdown-menu{left:-100%;margin-left:10px;-webkit-border-radius:6px 0 6px 6px;-moz-border-radius:6px 0 6px 6px;border-radius:6px 0 6px 6px;}
