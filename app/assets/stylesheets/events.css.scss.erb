
@import 'colors';

.event_address, .event_additional_details {
  display: none
}

.well.new-event {
  width: 600px
}

#new-event-form .form-control {
  font-size: 18px;
}

#host_event{
    padding: 5px 16px;

}

#avatar-size{
    padding-top: 5px;
    font-size: 10px;
    color: #006600;
}

#organizer-link{
    color: #003bb3;
}

#new-event-form {
  #event_forum_option {
    width: 20px;
    height: 15px;
    display: initial;}

  #event_start_time, #event_end_time,
  #event_location_details { font-size: 14px;}
}

.has-success .form-control {
  border-color: #4BB14D;

  &:focus { border-color: #4BB14D; }
}

.event-date-time > .form-group:first-child {
  float: left;
  margin-right: 10px;
}

// event tab styles in movement dashboard

.col-left{
  width: 40%;
  float: left;
  background-color: #DCF3E7;
  background-color: $background-color;
  max-height: 600px;
  overflow:scroll;
  padding: 5px 5px 0px 5px;
}

.edit-event-dash{
  float: left;
  background-color: black;
  border-color: black;
}

.event-img-dash{
  float: left;
}

.edit-event {
  background-color: #f5f5f5;
  padding: 10px;
  margin: 10px;
}

.col-sm-1 {
  min-width: 6em;
}

.col-sm-10 {
  width: 70%;
}

.col-right {
  background-color: $background-color;
  width: 55%;
  float: right;
}

.event-data{
  padding: 20px;
}

.event-actions{
  padding: 20px;
}

#query{
  height: 50px;
  width: 97.3%;
  margin: auto 0px;
  font-size: 20px;
}

.query-btn {
  width: 25px;
  height: 25px;
  margin-left: -35px;
  margin-bottom: -5px;
}

.query-filter {
  margin: 5px;
  font-size: 20px;
}

#no-results{
  display: none;
}

.event-flyer{
  padding: 5px;
  width: 100%;
  height: 275px;
}

.event-map{
  padding-left: 5px;
  padding-right: 5px;
}

.check-box {
  width: 40px;
  padding: 5px;
  border: solid;
}

.email-btn {
  margin: none;
  color: white;
}

.hide {
  display: none;
}

.datetimepicker {
  position: relative;
  z-index: 1000;
}

.event-extra {
  height: 100px;
}

#upcoming_events{
    padding-left: 13px;
}

.event_type_header{
  text-align: center;
  margin-bottom: 20px;
  font-size: 50px;
  font-family: Garamond, 'Helvetica Neue', Helvetica, Arial, sans-serif;
  font-weight: 500px;
}
