@import 'colors';

.event_address, .event_additional_details {
  display: none
}

.well.new-event {
  width: 600px
}

#new-event-form .form-control {
  font-size: 18px;
  height: 40px;
}

#new-event-form { 
  #event_forum_option { 
    width: 10%;
    height: 25px;
    display: initial;}

  #event_start_time, #event_end_time,
  #event_location_details { font-size: 14px;}                  
}

.has-success .form-control {
  border-color: #4BB14D;

  &:focus { border-color: #4BB14D; }
}

.event-date-time > .form-group:first-child {
  float: left;
  margin-right: 10px;
}

// event tab styles in movement dashboard

.col-left{
  width: 40%;
  float: left;
  background-color: #DCF3E7;
  max-height: 600px;
  overflow:scroll;
  padding: 10px;
}

.edit-event-dash{
  float: left;
}

.event-img-dash{
  float: left;
}

.edit-event {
  display: none;
  background-color: #f5f5f5;
  padding: 10px;
  margin: 10px;
}

.col-sm-1 {
  min-width: 6em;
}

.col-sm-10 {
  width: 70%;
}

.col-right {
  background-color: #DCF3E7;
  width: 55%;
  float: right;
}
