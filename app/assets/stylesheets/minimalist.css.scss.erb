.canvas {
    background-color: #FFFFFF;
    vertical-align: middle;
    max-width: 800px;
    margin: 0px auto;
    margin-top: -9px;
}
.events-button img {
    width: 365px;
    height: 180px;
}

.movements-buttons {
    margin-top: 10px;
    :first-child {margin-left: 10px}
    :last-child {
       margin-left: 10px;
    }
}

blockquote {
    margin-left: 20px;
    margin-top: 10px;
    color: #78260c;
}
.event-data{
    .event-image { float: left;}
    .event-details {
        float: left;
        margin-left: 30px;
        width: 70%;
        h3{
            color: #78260c;
            margin-top: 0px;
        }
    }
}

.event-actions {
    display: inline-block;
    .event-buttons {
        background-color: #272727;
        color: #fff;
        padding: 12px 20px;
        font-size: 15px;
        font-weight: 600;
        margin: 5px;
    }
}

.event-datetime {
    font-size: 13px;
    font-weight: 300;
    line-height: 1.6em;
}

.event-list {
    display: inline-block;
    margin-bottom: 30px;
    border-bottom-style: solid;
    border-bottom-color: #ECECEC;
    border-bottom-width: thin;
    padding-bottom: 10px;
    width: 100%;
}

body {
    background-color: #f6f2ea;
}

