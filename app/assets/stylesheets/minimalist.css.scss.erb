@import 'colors';

.events-button img, .network-button img {
  padding-bottom: 20px;
  width: 100%;
}

blockquote {
    margin-left: 20px;
    margin-top: 10px;
    color: $text-color;
}

.event-datetime {
    font-size: 13px;
    font-weight: 300;
    line-height: 1.6em;
}

.event-list {
    margin-bottom: 30px;
    border-bottom-style: solid;
    border-bottom-color: #ECECEC;
    border-bottom-width: thin;
    padding-bottom: 10px;
}

body {
    background-color: $background-color;
}

.event-list:last-child {
    border:none;
}

.spacer10 { height: 10px; width: 100%; font-size: 0; margin: 0; padding: 0; border: 0; display: block; }
